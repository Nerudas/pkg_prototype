<?xml version="1.0" encoding="utf-8"?>

<form>
	<fieldset name="main">
		<field name="title" type="text"
			   label="JGLOBAL_TITLE"
			   description="JFIELD_TITLE_DESC"
			   class="input-xxlarge input-large-text"
			   size="40"
			   required="true"/>
		<field name="price" type="text" label="COM_PROTOTYPE_PRESETS_PRICE_LABEL"/>
		<field name="text" type="textarea"
			   label="COM_PROTOTYPE_ITEM_TEXT"
			   class="span12"
			   rows="3"/>
		<field name="images" type="images"
			   label="COM_PROTOTYPE_ITEM_IMAGES"
			   folder_field="images_folder"
			   folder="content"
			   text="true"
			   limit="5"/>
		<field name="map" type="map"
			   label="JGLOBAL_FIELD_MAP_LABEL"
			   description="JGLOBAL_FIELD_MAP_DESC"
			   setplacemark="true"/>
	</fieldset>
	<fieldset name="hidden">
		<field name="images_folder" type="folder"
			   label="JGLOBAL_FIELD_IMAGES_FOLDER_LABEL"/>
		<field name="region" type="hidden"/>
		<field name="state" type="hidden" default="1"/>
		<field name="access" type="hidden" readonly="true"/>
		<field name="created" type="hidden" readonly="true"/>
		<field name="payment_down" type="hidden" readonly="true"/>
		<field name="payment_number" type="hidden" readonly="true"/>
		<field name="created_by" type="hidden" readonly="true"/>
		<field name="hits" type="hidden" readonly="true"/>
		<field name="id" type="hidden" default="0" readonly="true"/>
		<field name="catid" type="hidden" default="0"/>
		<field name="preset" type="hidden" required=" true"/>
		<field name="preset_price" type="hidden" required="true"/>
		<field name="preset_delivery" type="hidden" required="true"/>
		<field name="preset_object" type="hidden" required="true"/>
		<field name="external_link" type="hidden"/>
		<field name="location" type="hidden"/>
	</fieldset>
</form>