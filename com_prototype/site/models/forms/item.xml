<form>
	<fieldset>
		<field name="title" type="text"
			   label="JGLOBAL_TITLE"
			   description="JFIELD_TITLE_DESC"
			   class="input-xxlarge input-large-text"
			   size="40"
			   required="true"/>
		<field name="images" type="ajaximage"
			   multiple="true"
			   limit="5"
			   label="COM_PROTOTYPE_ITEM_IMAGES"/>
		<field name="map" type="map"
			   label="JGLOBAL_FIELD_MAP_LABEL"
			   description="JGLOBAL_FIELD_MAP_DESC"
			   setplacemark="true"/>
	</fieldset>

	<fieldset name="extra" label="COM_PROTOTYPE_ITEM_EXTRA">
		<fields name="extra">
			<field name="price_m3" type="price"
				   label="COM_PROTOTYPE_ITEM_EXTRA_PRICE_M3"
				   contract_price="false"/>
			<field name="price_t" type="price"
				   label="COM_PROTOTYPE_ITEM_EXTRA_PRICE_T"
				   contract_price="false"/>
			<field name="why_you" type="textarea"
				   label="COM_PROTOTYPE_ITEM_EXTRA_WHY_YOU"
				   rows="10"
				   cols="5"/>
			<field name="comment" type="textarea"
				   label="COM_PROTOTYPE_ITEM_EXTRA_COMMENT"
				   rows="10"
				   cols="5"/>
		</fields>
	</fieldset>


	<fieldset name="hidden">
		<field name="imagefolder" type="imagefolder" path="images/prototype/items"/>
		<field name="region" type="hidden"/>
		<field name="state" type="hidden" default="1"/>
		<field name="html" type="hidden" readonly="true"/>
		<field name="placemark_id" type="hidden" readonly="true"/>
		<field name="balloon_layout" type="hidden" readonly="true"/>
		<field name="access" type="hidden" readonly="true"/>
		<field name="created" type="hidden" readonly="true"/>
		<field name="publish_down" type="hidden" readonly="true"/>
		<field name="created_by" type="hidden" readonly="true"/>
		<field name="hits" type="hidden" readonly="true"/>
		<field name="id" type="hidden" default="0" readonly="true"/>
		<field name="catid" type="hidden" default="0"/>
	</fieldset>
</form>