<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="title" type="text"
			   label="JGLOBAL_TITLE"
			   description="JFIELD_TITLE_DESC"
			   class="input-xxlarge input-large-text"
			   size="40"
			   required="true"/>
		<field name="images" type="images"
			   label="COM_PROTOTYPE_PLACEMARK_IMAGES"
			   folder_field="images_folder"
			   folder="content"
			   text="false"/>
		<field name="layout" type="layout"
			   label="COM_PROTOTYPE_PLACEMARK_LAYOUT"
			   folder="placemarks"/>
	</fieldset>

	<fieldset name="global">
		<field name="demo" type="map"
			   label="COM_PROTOTYPE_PLACEMARK_DEMO"
			   setplacemark="true"/>
		<field name="id" type="text"
			   label="JGLOBAL_FIELD_ID_LABEL"
			   description="JGLOBAL_FIELD_ID_DESC"
			   class="readonly"
			   size="10"
			   default="0"
			   readonly="true"/>
		<field name="state" type="list"
			   label="JSTATUS"
			   description="JFIELD_PUBLISHED_DESC"
			   class="chzn-color-state"
			   filter="intval"
			   size="1"
			   default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="access" type="accesslevel"
			   label="JFIELD_ACCESS_LABEL"
			   description="JFIELD_ACCESS_DESC"
			   size="1"/>
		<field name="images_folder" type="folder"
			   label="JGLOBAL_FIELD_IMAGES_FOLDER_LABEL"/>
	</fieldset>
</form>