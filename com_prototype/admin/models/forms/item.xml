<?xml version="1.0" encoding="utf-8"?>

<form>
	<fieldset>
		<field name="html" type="editor"
			   label="COM_PROTOTYPE_ITEM_HTML"
			   hint="COM_PROTOTYPE_ITEM_HTML"
			   filter="JComponentHelper::filterText"
			   buttons="true"/>
		<field name="images" type="ajaximage"
			   multiple="true"
			   limit="5"
			   label="COM_PROTOTYPE_ITEM_IMAGES"/>
		<field name="created_by" type="user"
			   label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			   description="JGLOBAL_FIELD_CREATED_BY_DESC"
			   onchange="authorHasChanged(this)"/>
	</fieldset>

	<fieldset name="title">
		<field name="title" type="text"
			   label="JGLOBAL_TITLE"
			   description="JFIELD_TITLE_DESC"
			   class="input-xxlarge input-large-text"
			   size="40"
			   required="true"/>
		<field name="catid" type="prototypecategory"
			   label="COM_PROTOTYPE_CATEGORY"
			   default=""
			   onchange="categoryHasChanged(this)"
			   required="true">
			<option value="">JOPTION_SELECT_CATEGORY</option>
		</field>
	</fieldset>

	<fieldset name="global">
		<field name="map" type="map"
			   label="JGLOBAL_FIELD_MAP_LABEL"
			   description="JGLOBAL_FIELD_MAP_DESC"
			   setplacemark="true"/>
		<field name="placemark_id" type="sql"
			   label="COM_PROTOTYPE_PARAMS_PLACEMARK"
			   query="SELECT id, title FROM #__prototype_placemarks ORDER BY title asc"
			   key_field="id"
			   value_field="title">
			<option value="">JDEFAULT</option>
		</field>
		<field name="balloon_layout" type="layout"
			   label="COM_PROTOTYPE_PARAMS_BALLOON"
			   folder="balloons">
			<option value="">JDEFAULT</option>
		</field>
		<field name="listitem_layout" type="layout"
			   label="COM_PROTOTYPE_PARAMS_LISTITEM"
			   folder="listitems">
			<option value="">JDEFAULT</option>
		</field>
		<field name="state" type="list"
			   label="JSTATUS"
			   description="JFIELD_PUBLISHED_DESC"
			   class="chzn-color-state"
			   filter="intval"
			   size="1"
			   default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="region" type="regions"
			   label="JGLOBAL_FIELD_REGIONS_LABEL"
			   description="JGLOBAL_FIELD_REGIONS_DESC">
			<option value="">JGLOBAL_FIELD_REGIONS_NULL</option>
		</field>
		<field name="access" type="accesslevel"
			   label="JFIELD_ACCESS_LABEL"
			   description="JFIELD_ACCESS_DESC"
			   size="1"/>
		<field name="imagefolder" type="imagefolder" path="images/prototype/items"/>
	</fieldset>

	<fieldset name="extra" label="COM_PROTOTYPE_ITEM_EXTRA">
		<fields name="extra">
			<field name="price_m3" type="price"
				   label="COM_PROTOTYPE_ITEM_EXTRA_PRICE_M3"
				   contract_price="false"/>
			<field name="price_t" type="price"
				   label="COM_PROTOTYPE_ITEM_EXTRA_PRICE_T"
				   contract_price="false"/>
			<field name="price_h" type="price"
				   label="COM_PROTOTYPE_ITEM_EXTRA_PRICE_H"
				   contract_price="false"/>
			<field name="price_s" type="price"
				   label="COM_PROTOTYPE_ITEM_EXTRA_PRICE_S"
				   contract_price="false"/>
			<field name="price_o" type="price"
				   label="COM_PROTOTYPE_ITEM_EXTRA_PRICE_O"
				   contract_price="false"/>
			<field name="why_you" type="textarea"
				   label="COM_PROTOTYPE_ITEM_EXTRA_WHY_YOU"
				   rows="10"
				   cols="5"
				   class="input-xxlarge"/>
			<field name="comment" type="textarea"
				   label="COM_PROTOTYPE_ITEM_EXTRA_COMMENT"
				   rows="10"
				   cols="5"
				   class="input-xxlarge"/>
			<field name="discussion_link" type="text"
				   label="COM_PROTOTYPE_ITEM_EXTRA_DISCUSSION_LINK"
				   class="input-xxlarge"/>
		</fields>
	</fieldset>

	<fieldset name="attribs" label="JGLOBAL_FIELDSET_OPTIONS">
		<fields name="attribs">

		</fields>
	</fieldset>

	<fieldset name="publishingdata" label="">
		<field name="created" type="calendar"
			   label="JGLOBAL_FIELD_CREATED_LABEL"
			   description="JGLOBAL_FIELD_FIELD_CACHETIME_DESC"
			   translateformat="true"
			   showtime="true"
			   size="22"
			   filter="user_utc"/>
		<field name="publish_down" type="calendar"
			   label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL"
			   description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
			   translateformat="true"
			   showtime="true"
			   size="22"
			   filter="user_utc"/>
		<field name="plus_publish_down" type="pluspublishdown"
			   label="COM_PROTOTYPE_ITEM_PLUS_PUBLISH_DOWN"/>
		<field name="payment_number" type="text"
			   label="COM_PROTOTYPE_ITEM_PAYMENT_NUMBER"
			   class="input-xxlarge"/>
		<field name="hits" type="number"
			   label="JGLOBAL_HITS"
			   class="readonly"
			   size="6"
			   readonly="true"
			   filter="unset"/>
		<field name="id" type="text"
			   label="JGLOBAL_FIELD_ID_LABEL"
			   description="JGLOBAL_FIELD_ID_DESC"
			   class="readonly"
			   size="10"
			   default="0"
			   readonly="true"/>
	</fieldset>
</form>